<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PictureOfTheDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MainTheme" parent="Theme.PictureOfTheDay">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryVariant">?themecolorPrimaryVariant</item>
        <item name="colorOnPrimary">?themecolorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?themecolorSecondary</item>
        <item name="colorSecondaryVariant">?themecolorSecondaryVariant</item>
        <item name="colorOnSecondary">?themecolorOnSecondary</item>

        <item name="themeColorPrimary">@color/purple_200</item>
        <item name="themecolorPrimaryVariant">@color/purple_700</item>
        <item name="themecolorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="themecolorSecondary">@color/teal_200</item>
        <item name="themecolorSecondaryVariant">@color/teal_200</item>
        <item name="themecolorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Mars" parent="Theme.PictureOfTheDay">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryVariant">?themecolorPrimaryVariant</item>
        <item name="colorOnPrimary">?themecolorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?themecolorSecondary</item>
        <item name="colorSecondaryVariant">?themecolorSecondaryVariant</item>
        <item name="colorOnSecondary">?themecolorOnSecondary</item>

        <!-- Status bar color. -->
        <item name="themeColorPrimary">@color/mars_500</item>
        <item name="themecolorPrimaryVariant">@color/mars_700</item>
        <item name="themecolorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="themecolorSecondary">@color/mars_teal_200</item>
        <item name="themecolorSecondaryVariant">@color/mars_teal_200</item>
        <item name="themecolorOnSecondary">@color/black</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearanceSmallComponent.Chip</item>
        <item name="chipBackgroundColor">@attr/colorOnBackgroundChipLuna</item>

        <item name="fontFamily">@font/aclonica</item>
    </style>

    <style name="Theme.Luna" parent="Theme.PictureOfTheDay">

        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryVariant">?themecolorPrimaryVariant</item>
        <item name="colorOnPrimary">?themecolorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?themecolorSecondary</item>
        <item name="colorSecondaryVariant">?themecolorSecondaryVariant</item>
        <item name="colorOnSecondary">?themecolorOnSecondary</item>

        <item name="themeColorPrimary">@color/luna_500</item>
        <item name="themecolorPrimaryVariant">@color/luna_700</item>
        <item name="themecolorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="themecolorSecondary">@color/luna_teal_200</item>
        <item name="themecolorSecondaryVariant">@color/luna_teal_200</item>
        <item name="themecolorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="chipBackgroundColor">?colorOnBackgroundChipMars</item>

        <item name="fontFamily">@font/abril_fatface</item>
    </style>
</resources>


